@using Business.ViewModels.Category
@model CategoryIndexVM

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Product Categories</h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="fas fa-plus-circle mr-2"></i>Create New
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Modified At</th>
                        <th class="text-center" style="width: 200px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>@category.Name</td>
                            <td>@category.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@(category.ModifiedAt?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <a class="btn btn-sm btn-success mx-1"
                                       asp-action="Update"
                                       asp-route-id="@category.Id">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form method="post"
                                          asp-action="Delete"
                                          asp-route-id="@category.Id">
                                        <button type="submit"
                                                class="btn btn-sm btn-danger mx-1"
                                                onclick="return confirm('Delete this category?')">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <nav class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage - 1)">
                            Previous
                        </a>
                    </li>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i">@i</a>
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(ViewBag.CurrentPage + 1)">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>