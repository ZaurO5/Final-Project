@using Business.ViewModels.Product
@model ProductCreateVM

<div class="card shadow mb-4">
    <div class="card-header">
        <h4 class="card-title">Create New Product</h4>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="form-label">Image</label>
                <input asp-for="ImagePath" type="file" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockCount" class="form-label">Stock Count</label>
                <input asp-for="StockCount" class="form-control" type="number" min="1" />
                <span asp-validation-for="StockCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="form-label">Gender</label>
                <select asp-for="Gender" class="form-control">
                    <option value="1">Man</option>
                    <option value="2">Woman</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryIds" class="form-label">Categories</label>
                <select asp-for="CategoryIds" class="form-control" multiple>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ColorIds" class="form-label">Colors</label>
                <select asp-for="ColorIds" class="form-control" multiple>
                    @foreach (var color in ViewBag.Colors)
                    {
                        <option value="@color.Id">@color.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SizeIds" class="form-label">Sizes</label>
                <select asp-for="SizeIds" class="form-control" multiple>
                    @foreach (var size in ViewBag.Sizes)
                    {
                        <option value="@size.Id">@size.Name</option>
                    }
                </select>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg">Create</button>
            </div>
        </form>
    </div>
    <div class="card-footer text-center">
        <a class="btn btn-danger btn-lg" asp-action="Index">Back</a>
    </div>
</div>