@using Business.ViewModels.Account
@model AccountLoginVM

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="auth-wrapper">
    <div class="auth-container">
        <form asp-action="Login" method="post" class="auth-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <h3 class="auth-title">Login</h3>
            <div class="auth-input-group">
                <input asp-for="Email" type="text" placeholder="Email Address" class="auth-input">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="auth-input-group">
                <input asp-for="Password" type="password" placeholder="Password" class="auth-input">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="auth-button">Confirm</button>
            <div class="auth-links">
                <a asp-action="ForgetPassword">Forgot Password?</a>
                <a asp-action="Register">Register</a>
            </div>
        </form>
        <div class="auth-image">
            <img src="~/assets/images/012ef79872a46b707edc17ac369008d6.jpg" alt="Login Image">
        </div>
    </div>
</div>