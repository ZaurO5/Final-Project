@using Business.ViewModels.Account
@model ResetPasswordVM

<div style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
    <div style="width: 90%; max-width: 400px; padding: 2rem; border: 1px solid #ddd; border-radius: 8px;">
        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

            <h3 class="text-center mb-4">Reset Password</h3>

            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="d-block mb-1">New Password</label>
                <input asp-for="NewPassword"
                       type="password"
                       class="form-control w-100">
                <span asp-validation-for="NewPassword" class="text-danger small d-block mt-1"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmNewPassword" class="d-block mb-1">Confirm Password</label>
                <input asp-for="ConfirmNewPassword"
                       type="password"
                       class="form-control w-100">
                <span asp-validation-for="ConfirmNewPassword" class="text-danger small d-block mt-1"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-5">
                    Reset Password
                </button>
            </div>
        </form>
    </div>
</div>