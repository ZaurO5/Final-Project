@using Core.Entities
@model ContactMessage
<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        color: #000000;
    }

    .contact-header {
        background: rgb(238,174,202);
        background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
        text-align: center;
        padding: 4rem 1rem;
    }

    .contact-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .contact-info {
        flex: 1;
        min-width: 300px;
    }

    .info-card {
        background: white;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .contact-form {
        flex: 2;
        min-width: 300px;
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .form-input {
        width: 100%;
        padding: 0.8rem;
        margin-bottom: 1rem;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .submit-btn {
        background: #000000;
        color: white;
        padding: 1rem 2rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }
</style>
<body>
    <div class="contact-header">
        <h1>Contact Us</h1>
        <p>We're here to help and answer any questions</p>
    </div>

    <div class="contact-container">
        <div class="contact-info">
            <div class="info-card">
                <h3>Visit Us</h3>
                <p>123 Webstreet, Tech City<br>CodeLand, ST 56789</p>
            </div>

            <div class="info-card">
                <h3>Call Us</h3>
                <p>+1 (555) 123-4567<br>Mon-Fri: 9AM - 7PM EST</p>
            </div>

            <div class="info-card">
                <h3>Email Us</h3>
                <p>Demomail@gmail.Com<br>Response within 24 hours</p>
            </div>
        </div>

        <form class="contact-form" asp-controller="Contact" asp-action="Submit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <h2>Send Message</h2>

            <div class="form-group">
                <input asp-for="Name" class="form-input" placeholder="Your Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Email" class="form-input" placeholder="Your Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <textarea asp-for="Content" class="form-input" rows="5" placeholder="Your Message"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <button type="submit" class="submit-btn">Send Message</button>
        </form>
    </div>
</body>
