<!-- Forgot Password -->
<div class="auth-wrapper">
    <div class="auth-container">
        <form action="" class="auth-form">
            <h3 class="auth-title">Reset Password</h3>
            <div class="auth-input-group">
                <input type="text" placeholder="Email Address" class="auth-input">
            </div>
            <div class="auth-input-group">
                <input type="text" placeholder="Confirm Email Address" class="auth-input">
            </div>
            <button class="auth-button">Confirm</button>
            <div class="auth-links">
                <a asp-controller="Login" asp-action="Index">back to the login</a>
            </div>
        </form>
        <div class="auth-image">
            <img src="~/assets/images/fashion-websites.jpg" alt="Login Image">
        </div>
    </div>
</div>
<!-- Forgot Password End -->