<!-- Login -->
<div class="auth-wrapper">
    <div class="auth-container">
        <form action="" class="auth-form">
            <h3 class="auth-title">Login</h3>
            <div class="auth-input-group">
                <input type="text" placeholder="Email Address" class="auth-input">
            </div>
            <div class="auth-input-group">
                <input type="password" placeholder="Password" class="auth-input">
            </div>
            <button class="auth-button">Confirm</button>
            <div class="auth-links">
                <a asp-controller="Login" asp-action="ForgotPassword">Forgot Password?</a>
                <a asp-controller="Login" asp-action="Register">Register</a>
            </div>
        </form>
        <div class="auth-image">
            <img src="~/assets/images/012ef79872a46b707edc17ac369008d6.jpg" alt="Login Image">
        </div>
    </div>
</div>
<!-- Login End -->    