<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <title>ZaireWear</title>
</head>
<body>
    <div class="wrapper">
        <!-- Header/Navbar -->
        <nav>
            <div class="navTop">
                <div class="navItem">
                    <div class="navItem-Logo">
                        <img src="~/assets/images/ZaireWearLogo.png" alt="Zaire Wear">
                    </div>
                </div>
                <div class="navItem">
                    <ul id="navigation">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="dropdown">
                            <a asp-controller="Catalog" asp-action="Index" id="catalog-btn">Catalog</a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Catalog" asp-action="Index" asp-route-gender="1">Man</a></li>
                                <li><a asp-controller="Catalog" asp-action="Index" asp-route-gender="2">Woman</a></li>
                            </ul>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit"
                                            class="auth-link"
                                            style="background:none; border:none; padding:0; cursor:pointer; color: white; font-weight: bold;">
                                        Log Out
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li><a class="auth-link" asp-controller="Account" asp-action="Login">Log In</a></li>
                        }
                        <li><a asp-controller="Basket" asp-action="Index">Shopping Bag</a></li>
                        <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Header/Navbar End-->
        @RenderBody()
        <!-- Footer -->
        <footer class="footer">
            <div class="footer_top">
                <div class="container">
                    <div class="footer_sections">
                        <div class="footer_widget">
                            <h3 class="footer_title">Contact Us</h3>
                            <ul class="address_line">
                                <li><a href="mailto:Demomail@gmail.com">Demomail@gmail.Com</a></li>
                                <li>123 Webstreet, Tech City, CodeLand, 56789</li>
                            </ul>
                        </div>
                        <div class="footer_widget">
                            <h3 class="footer_title">Quick Link</h3>
                            <ul class="links">
                                <li><a href="#">Privacy Policy</a></li>
                                <li><a href="#">Terms of Service</a></li>
                            </ul>
                        </div>
                        <div class="footer_widget footer_socials">
                            <h3 class="footer_title">Follow Us</h3>
                            <div class="social_icons">
                                <a href="https://www.facebook.com/" class="social_icon" target="_blank" rel="noopener noreferrer">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="https://www.instagram.com/" class="social_icon" target="_blank" rel="noopener noreferrer">
                                    <i class="fab fa-instagram"></i>
                                </a>
                                <a href="https://www.linkedin.com/" class="social_icon" target="_blank" rel="noopener noreferrer">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                                <a href="https://www.pinterest.com/" class="social_icon" target="_blank" rel="noopener noreferrer">
                                    <i class="fab fa-pinterest-p"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Footer End-->
        <!-- JS -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="~/assets/js/basket.js"></script>
        <script src="~/assets/js/slideshow.js"></script>
        <script src="~/assets/js/dropdown.js"></script>
        <script src="~/assets/js/colorandsizeselect.js"></script>
        <script src="~/assets/js/quantity.js"></script>
        <!-- JS End -->
    </div>
</body>
</html>
