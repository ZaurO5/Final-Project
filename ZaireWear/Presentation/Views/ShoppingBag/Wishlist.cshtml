<!-- Favorites -->
<div class="favorites-container">
    <div class="favorites-items">
        <div class="favorites-card">
            <div class="favorites-item-image">
                <img src="~/assets/images/012ef79872a46b707edc17ac369008d6.jpg" alt="Product Image">
            </div>
            <div class="favorites-item-info">
                <div class="favorites-item-title">Shirt Name just for test</div>
                <div class="favorites-item-price">$99.99</div>
                <div class="favorites-item-category">Category: Shirt</div>
                <button class="favorites-remove-btn">Remove</button>
            </div>
        </div>

        <div class="favorites-card">
            <div class="favorites-item-image">
                <img src="~/assets/images/fashion-Ecommerce1.jpg" alt="Product Image">
            </div>
            <div class="favorites-item-info">
                <div class="favorites-item-title">Pants Name just for test</div>
                <div class="favorites-item-price">$79.99</div>
                <div class="favorites-item-category">Category: Pants</div>
                <button class="favorites-remove-btn">Remove</button>
            </div>
        </div>
    </div>

    <div class="favorites-actions">
        <a asp-controller="Catalog" asp-action="Index">
            <button class="go-to-shop-btn">Go to Catalog</button>
        </a>
        <a asp-controller="ShoppingBag" asp-action="Index">
            <button class="back-to-bag-btn">Back to Shopping Bag</button>
        </a>
    </div>
</div>
<!-- Favorites End -->