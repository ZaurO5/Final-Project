<!-- Product Details -->
<section class="details-page">
    <div class="container">
        <div class="product-card">
            <div class="product-image">
                <img src="~/assets/images/012ef79872a46b707edc17ac369008d6.jpg" alt="Product Name">
            </div>
            <div class="product-info">
                <h2 class="product-name">Shirt Name just for test</h2>
                <h3 class="product-price">$99.99</h3>
                <h2 class="product-category">Category: Shirt</h2>

                <h2 class="product-description">
                    This is a detailed description of the product. It includes features, materials, and sizing information.
                </h2>

                <div class="product-options">
                    <label>Select Color:</label>
                    <div class="color-options">
                        <button class="color white" data-color="white"></button>
                        <button class="color black" data-color="black"></button>
                        <button class="color gray" data-color="gray"></button>
                        <button class="color beige" data-color="beige"></button>
                        <button class="color light-blue" data-color="light-blue"></button>
                    </div>
                </div>

                <div class="product-options">
                    <label>Select Size:</label>
                    <div class="size-options">
                        <button class="size" data-size="XS">XS</button>
                        <button class="size" data-size="S">S</button>
                        <button class="size" data-size="M">M</button>
                        <button class="size" data-size="L">L</button>
                        <button class="size" data-size="XL">XL</button>
                    </div>
                </div>

                <div class="quantity">
                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" min="1" value="1">
                </div>

                <div class="actions">
                    <button class="btn add-to-basket" data-id="1" data-action="add-to-basket">
                        Add to Shopping Bag
                    </button>
                    <button class="btn add-to-favorites" data-id="1" data-action="add-to-favorites">
                        Add to Favorites
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details End -->