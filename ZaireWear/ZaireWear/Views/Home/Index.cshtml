@using Business.ViewModels.Slider
@model SliderIndexVM

<main>
    <div class="sliderCode">
        <section>
            <div class="container">
                @if (Model?.Sliders != null && Model.Sliders.Any())
                {
                    <h1 id="sliderTitle">@Model.Sliders.FirstOrDefault()?.Title</h1>
                    <div class="slider">
                        <div class="slides">
                            @foreach (var slider in Model.Sliders)
                            {
                                <div class="slide" data-title="@slider.Title" data-subtitle="@slider.Subtitle">
                                    <img src="@Url.Content($"~/{slider.ImagePath}")" alt="Slide">
                                </div>
                            }
                        </div>
                        <button class="prev" onclick="prevSlide()">&#10094;</button>
                        <button class="next" onclick="nextSlide()">&#10095;</button>
                    </div>
                    <p id="sliderSubtitle">@Model.Sliders.FirstOrDefault()?.Subtitle</p>
                }
            </div>
        </section>
    </div>
</main>
